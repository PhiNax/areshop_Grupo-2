<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') -%>

  <body class="body__login">
    <%- include('../partials/header') -%>

      <main class="main__login">
        <form action="/login" method="POST" class="registro-form">
          <div class="titulo-registro">Sign In</div>
          <div>
            <label class="email" for="email">Emil Address</label>
            <input type="email" name="email" placeholder="Email" autocomplete="email" class="relleno">
            <% if (locals.errors && errors.email) { %>
              <div>
                <%= errors.email.msg %>
              </div>
              <% } %>
          </div>
          <div>
            <label class="password" for="password">Password</label>
            <input type="password" name="password" placeholder="Password">
          </div>

          <label for="rememberUser">Remember Me</label>
          <input type="checkbox" name="rememberUser">

          <button type="submit" name="login">SIGN IN</button>
        </form>
      </main>
      <%- include('../partials/footer') -%>
  </body>

</html>
<!DOCTYPE html>
<html lang="en">
<!-- START Head Content -->
<%- include('../partials/head', { data: 'details' } ) -%>

  <body class="body__game__details">
    <!-- START Header Content -->
    <%- include('../partials/header') -%>
      <main class="main__game__details">
        <!-- START MAIN Content -->
        <div class="detail__background">
          <img src="<%= game.gamescreenshots[0].name %>" alt="" />
        </div>
        <div class="detail__content">
          <div class="detail__images">
            <img src="/img/products/cover/<%= game.coverImage %>" alt="" class="detail__img" />
          </div>
          <div class="detail__details">

            <div class="detail__title">
              <%= game.name %>
            </div>

            <div class="detail__platform">
              Platform:
              <span class="bold italic">
                <%= game.gameplatform.name %>
              </span>
            </div>
            <div class="detail__category">
              Category:
              <span class="bold italic">
                <%= game.gamecategory.name %>
              </span>
            </div>


            <div class="detail__description">
              <%= game.description %>
            </div>
          </div>
          <div class="detail__sale">
            <div class="detail__icons">
              <div>
                <i class="fas fa-globe"></i>
              </div>
              <div class="share__icon">
                <i class="fas fa-share-alt"></i>
              </div>
              <div class="favourite__icon">
                <i class="far fa-heart"></i>
              </div>
            </div>
            <div class="detail__rating">
              <div>Users Rating:</div>
              <div class="stars__rating" style="--rating: <%= game.rating %>;"></div>
            </div>
            <div class="detail__price">
              <div>$<%= game.price %>
              </div>
            </div>
            <div class="detail__button">
              <button class="button__addcart" type="submit">Add to Cart</button>
            </div>
            <div class="secure__icons"><i class="fas fa-lock"></i> Your transaction is secure</div>
            <div><a class="secure__details" href="#">See our secure transaction details</a></div>
          </div>
        </div>

        <div class="detail__images__carousel">
          <% game.gamescreenshots.forEach(function(element){ %>
            <img src="<%= element.name %>" alt="<%= game.name %>" class="detail__miniImages" />
            <% }); %>
        </div>

      </main>
      <!-- START Footer Content -->
      <%- include('../partials/footer') -%>
  </body>

</html>